<div class="fixed">
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1><%= link_to "Pseudo-Twitter", root_path %></h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
    </ul>

    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="right">
        <% if signed_in? %>
          <li><%= link_to 'New Tweet', new_tweet_path %></li>
          <li class="has-dropdown">
            <a href="#">@<%= current_user.name %></a>
            <ul class="dropdown">
              <li><%= link_to 'Your Profile', user_path(current_user.name) %>
                </li>
              <li><%= link_to 'Sign Out', session_path(current_user), method: :delete %>
          </li>
        <% else %>
          <li><%= link_to 'Sign In', new_session_path %></li>
        <% end %>
      </ul>

    </section>
  </nav>
</div>
