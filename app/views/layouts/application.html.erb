<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= content_for?(:title) ? yield(:title) : "foundation-rails" %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>

    <div class="fixed">
      <nav class="top-bar" data-topbar>
        <ul class="title-area">
          <li class="name">
            <h1><%= link_to "Pseudo-Twitter", root_path %></h1>
          </li>
          <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
        </ul>

        <section class="top-bar-section">
          <!-- Right Nav Section -->
          <ul class="right">
            <% if signed_in? %>
              <li><%= link_to 'New Tweet', new_tweet_path %></li>
              <li class="has-dropdown">
                <a href="#">@<%= current_user.name %></a>
                <ul class="dropdown">
                  <li><%= link_to 'Your Profile', user_path(current_user.name) %>
                    </li>
                  <li><%= link_to 'Sign Out', session_path(current_user), method: :delete %>
              </li>
            <% else %>
              <li><%= link_to 'Sign In', new_session_path %></li>
            <% end %>
          </ul>

        </section>
      </nav>
    </div>

    <div class="row">
      <% if alert %>
      <div data-alert class="small-12 columns alert-box warning">
        <%= alert %>
        <a href="#" class="close">&times;</a>
      </div>
      <% elsif notice %>
      <div data-alert class="small-12 columns alert-box">
        <%= notice %>
        <a class="close" href="#">&times;</a>
      </div>
      <% end %>
    </div>

    <%= yield %>

    <%= javascript_include_tag "application" %>
  </body>
</html>
